                <% temples.forEach(row => { %>
                    <tr>
                        <td><%= row.temple_name %></td>
                        <td><%= row.status %></td>
                        <td><%= new Date(row.dedication_date).toLocaleDateString('en-US') %></td>
                    </tr>
                <% }) %>
            <% } else { %>
            <tr>
                <td colspan="3">No data available</td>
            </tr>
            <% } %>
        </tbody>
